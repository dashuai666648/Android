<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <!-- Title Row with Todo Status Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Todo Status Indicator -->
        <TextView
            android:id="@+id/todo_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:minHeight="20dp"
            android:background="#4CAF50"
            android:visibility="gone"
            android:layout_marginRight="8dp" />

        <!-- Note Title -->
        <TextView
            android:id="@android:id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
    android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Category and Timestamp Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    android:gravity="center_vertical"
        android:paddingTop="6dp">

        <!-- Category Badge -->
        <TextView
            android:id="@+id/category_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/category_badge"
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:gravity="center" />

        <!-- Timestamp -->
        <TextView
            android:id="@android:id/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#B0B0B0"
    android:singleLine="true"
            android:ellipsize="end" />

        <!-- Todo Status Badge -->
        <TextView
            android:id="@+id/todo_status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/todo_badge"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
